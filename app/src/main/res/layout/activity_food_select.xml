<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:columnCount="2">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/img_toolbar"
                app:layout_constraintEnd_toStartOf="@+id/img_toolbar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_toolbar"
                app:srcCompat="@drawable/ic_back_vactor" />


            <TextView
                android:id="@+id/shearch"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/white"
                android:text="검색"
                android:textColor="@color/black"
                android:textSize="38dp"
                android:textStyle="bold" />

        </GridLayout>

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#AFC6E9"
            android:completionThreshold="1"
            android:hint="음식을 검색하세요"
            android:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></AutoCompleteTextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/white"
            android:text="추천음식"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="2">

            <Button
                android:id="@+id/RF1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#AFC6E9"
                android:text="공깃밥"
                android:textColor="#6C6C6C" />

            <Button
                android:id="@+id/RF2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:backgroundTint="#AFC6E9"
                android:text="배추김치"
                android:textColor="#6C6C6C" />

            <Button
                android:id="@+id/RF3"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:backgroundTint="#AFC6E9"
                android:text="계란후라이"
                android:textColor="#6C6C6C" />

            <Button
                android:id="@+id/RF4"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#AFC6E9"
                android:text="쇠고기 뭇국"
                android:textColor="#6C6C6C" />

            <Button
                android:id="@+id/RF5"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:backgroundTint="#AFC6E9"
                android:text="미역국"
                android:textColor="#6C6C6C" />

            <Button
                android:id="@+id/RF6"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:backgroundTint="#AFC6E9"
                android:text="메추리알 장조림"
                android:textColor="#6C6C6C" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="bottom"
                android:background="#E9EFFF"
                android:columnCount="2"
                android:rowCount="3">

                <Button
                    android:id="@+id/CF1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#AFC6E9"
                    android:drawableRight="@drawable/ic_outline_close_24"
                    android:text=" "
                    android:textColor="#6C6C6C"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/CF2"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnSpan="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#AFC6E9"
                    android:drawableRight="@drawable/ic_outline_close_24"
                    android:text=" "
                    android:textColor="#6C6C6C"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/CF3"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#AFC6E9"
                    android:drawableRight="@drawable/ic_outline_close_24"
                    android:text=" "
                    android:textColor="#6C6C6C"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/CF4"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#AFC6E9"
                    android:drawableRight="@drawable/ic_outline_close_24"
                    android:text=" "
                    android:textColor="#6C6C6C"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/CF5"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#AFC6E9"
                    android:drawableRight="@drawable/ic_outline_close_24"
                    android:text=" "
                    android:textColor="#6C6C6C"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/CF6"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#AFC6E9"
                    android:drawableRight="@drawable/ic_outline_close_24"
                    android:text=" "
                    android:textColor="#6C6C6C"
                    android:visibility="invisible" />

            </GridLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/daum"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/white"
                    android:text="다음"
                    android:textColor="@color/black"
                    android:textSize="38dp"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

